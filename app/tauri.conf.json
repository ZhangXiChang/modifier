{
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devPath": "http://localhost:5173",
        "distDir": "../dist"
    },
    "tauri": {
        "windows": [
            {
                "label": "main",
                "title": "修改器",
                "width": 1250,
                "height": 850,
                "decorations": false,
                "transparent": true,
                "center": true
            }
        ],
        "bundle": {
            "identifier": "com.zhangxichang.modifier",
            "icon": [
                "../assets/logo.ico"
            ]
        },
        "allowlist": {
            "window": {
                "startDragging": true,
                "minimize": true,
                "maximize": true,
                "close": true,
                "unmaximize": true
            },
            "shell": {
                "open": true
            }
        }
    }
}